@page "/messageBlock"

@using Models;

<div class="card ">
    <div class="card-body alert @style">
        <div class="">
            @userMessage.Message
        </div>
        <div>
            <small>@userMessage.UserName</small><small>@userMessage.TimeStamp.ToString("hh:MM")</small>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public UserMessage userMessage { get; set; } = new UserMessage();

    private string style { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        switch(userMessage.Type)
        {
            case UserMessage.MessgageType.Othere:
                style = "alert-secondary othe-message";
                break;
            case UserMessage.MessgageType.Server:
                style = "alert-primary server-notification";
                break;
            case UserMessage.MessgageType.User:
                style = "alert-success user-message";
                break;
        }
    }

}
